@page
@model SUB.Pages.WalletModel
@{
    ViewData["Title"] = "Portfel";
}

<div>
    <p class="subsite-header"><img src="https://www.freeiconspng.com/thumbs/wallet-icon/06-wallet-icon--swanky-outlines-iconset--pixelkit-14.png" />Portfel <hr /> </p>
    <p><i>Minimalna kwota transakcji to 10 PLN</i></p>
    <h1>Saldo: @Model.Srodki PLN</h1>
    <form method="post">
        <table>
            <tr>
                <td colspan="2"><input type="number" step="0.01" min="10" asp-for="Portfel.Srodki" placeholder="10"/></td>
            </tr>
            <tr>
                <td><button class="wallet-btn" type="submit" name="Wplac">WPŁAĆ</button></td>
                <td><button class="wallet-btn" type="submit" name="Wyplac">WYPŁAĆ</button></td>
            </tr>
        </table>
    </form>
</div>
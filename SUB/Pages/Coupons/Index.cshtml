@page
@model SUB.Pages.Coupons.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kupon[0].UzytkownikId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kupon[0].Wydarzenie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kupon[0].Srodki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kupon[0].ObstawionyKurs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Kupon) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UzytkownikId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wydarzenie.Gosc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Srodki)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObstawionyKurs)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
